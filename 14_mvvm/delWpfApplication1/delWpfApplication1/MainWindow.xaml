<Window x:Class="delWpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="269*"/>
			<RowDefinition Height="50*"/>
		</Grid.RowDefinitions>

		<Image
			Opacity="{Binding ElementName=s, Path=Value}"
			Stretch="Uniform" Source="http://s.likes-media.com/img/6e0e2f8b13f6bacf0d5099e4199eb507.600x.jpg"></Image>
		
		<Slider Name="s" Grid.Row="1" 
				Value="1"
				Maximum="1" Minimum="0"></Slider>
	</Grid>
</Window>
