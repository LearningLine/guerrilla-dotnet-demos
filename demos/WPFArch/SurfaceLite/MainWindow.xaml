<Window x:Class="SurfaceLite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SurfaceLite"
        mc:Ignorable="d"
        Title="Surface Lite by Andy C."
        FontSize="24"
        Height="350" Width="525">
    <DockPanel LastChildFill="True">
        <Grid DockPanel.Dock="Bottom" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Uri" Grid.Column="0" Padding="5" />
            <TextBox x:Name="uriTextBox" Text=""  Grid.Column="1"  Padding="5"/>
            <Button Content="Go!" Grid.Column="2"  Padding="5"
                    Click="ButtonBase_OnClick"/>
        </Grid>
        <Canvas x:Name="surface" Background="Black" />
    </DockPanel>
</Window>
