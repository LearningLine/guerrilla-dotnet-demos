<Window x:Class="SimpleBinding.DataTemplateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:simpleBinding="clr-namespace:SimpleBinding"
        Title="DataTemplateWindow" Height="300" Width="300">
    
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
        </Style>

        <DataTemplate DataType="{x:Type simpleBinding:Person}">
            <Border BorderBrush="Aqua" BorderThickness="5">
                <StackPanel>
                    <TextBlock Text="{Binding Name}"/>
                    <TextBlock Text="{Binding Age}"/>
                </StackPanel>
            </Border>
        </DataTemplate>      
        
    </Window.Resources>
    <Grid>
        
    </Grid>
</Window>
