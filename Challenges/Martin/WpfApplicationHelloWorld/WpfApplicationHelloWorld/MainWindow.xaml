<Window x:Class="WpfApplicationHelloWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wpfApplicationHelloWorld="clr-namespace:WpfApplicationHelloWorld"
        Title="I must learn to type" Height="350" Width="525" SizeToContent="WidthAndHeight" Background="White"
        KeyDown="MainWindow_OnKeyDown">
    <StackPanel>
    <Grid Height="350" Width="525">
        <TextBlock Text="{Binding TargetString}" FontWeight="ExtraBold" FontSize="48.25pt" Foreground="Black" FontFamily="Courier New"></TextBlock>
        <TextBlock Text="{Binding CurrentCorrectString}" FontWeight="ExtraBold" FontSize="48pt" Foreground="LawnGreen"  FontFamily="Courier New" />
        <TextBlock Text="{Binding CurrentWrongString}" FontWeight="ExtraBold" FontSize="48pt" Foreground="Red"  FontFamily="Courier New" />
    </Grid>

        <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
            <Ellipse Width="250" Height="250" Fill="{Binding CurrentProgress}"></Ellipse>
            <Image Name="ImageRich" Width="250" Height="250" Source="rich.jpg"></Image>
            </StackPanel>
    </StackPanel>
</Window>
